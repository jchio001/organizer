<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_draft_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Punch someone so hard that they explode!"/>

    <TextView
        android:id="@+id/event_draft_last_updated_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:minLines="1"
        android:maxLines="1"
        android:textColor="@color/subtext_color"
        android:textSize="14sp"
        tools:text="Last updated Oct 31, 2018 9:34 AM"/>

</LinearLayout>